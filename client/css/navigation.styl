#side-nav
  background-color: #555
  top: 0
  bottom: 0
  min-width: 200px
  position: absolute
  color: white

  a
    text-decoration: none
    color: white

  h3
    text-align: center
    padding-top: 10px
    padding-bottom: 15px

  .lbl
    padding-top: 20px
    padding-bottom: 5px
    padding-left: 10px
    color: #aaa

  li
    padding: 5px 0
    padding-left: 15px

    &.active
      background-color: #333

  .ftr
    position: absolute
    border-top: 1px solid white
    width: 100%
    height: 70px
    padding: 10px 0
    bottom: 0

    a
      display inline-block
      padding: 30px 16px

      &:nth-of-type(2)
        border-left: 1px solid white
